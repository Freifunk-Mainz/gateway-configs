# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 94.23.58.68
	netmask 255.255.255.0
	network 94.23.58.0
	broadcast 94.23.58.255
	gateway 94.23.58.254

iface eth0 inet6 static
	address 2001:41D0:2:3B44::1
	netmask 128
	post-up /sbin/ip -f inet6 route add 2001:41D0:2:3Bff:ff:ff:ff:ff dev eth0
	post-up /sbin/ip -f inet6 route add default via 2001:41D0:2:3Bff:ff:ff:ff:ff
#
	pre-down /sbin/ip -f inet6 route del default via 2001:41D0:2:3Bff:ff:ff:ff:ff
	pre-down /sbin/ip -f inet6 route del 2001:41D0:2:3Bff:ff:ff:ff:ff dev eth0

auto mzBR
iface mzBR inet static
	bridge-ports none
	address 10.37.0.5
	netmask 255.255.192.0
	# ip rules to add all traffic entering the bridge to the appropriate rt_table
	post-up		/sbin/ip rule add iif $IFACE table mz
	pre-down	/sbin/ip rule del iif $IFACE table mz
        # local reachable subnet
        post-up         /sbin/ip route add 10.37.0.0/18 dev $IFACE table mz
        post-down       /sbin/ip route del 10.37.0.0/18 dev $IFACE table mz
	# insert ic-vpn light route for mz network into rt_table wi
        post-up         /sbin/ip route add 10.37.0.0/18 table wi dev $IFACE
        post-down       /sbin/ip route del 10.37.0.0/18 table wi dev $IFACE

iface mzBR inet6 static
	address fd37:b4dc:4b1e::a25:5
	netmask 64
	# ip rules to add all traffic entering the bridge to the appropriate rt_table
	post-up         /sbin/ip -6 rule add iif $IFACE table mz
	pre-down        /sbin/ip -6 rule del iif $IFACE table mz
        # link-local subnet
        post-up         /sbin/ip -6 route add fe80::/64 dev $IFACE table mz proto kernel metric 256
        post-down       /sbin/ip -6 route del fe80::/64 dev $IFACE table mz proto kernel metric 256
	post-up		/sbin/ip -6 route add fd37:b4dc:4b1e::/64 dev $IFACE table mz proto kernel metric 256
	post-down	/sbin/ip -6 route del fd37:b4dc:4b1e::/64 dev $IFACE table mz proto kernel metric 256
	# insert ic-vpn light route for mz network into rt_table wi
        post-up         /sbin/ip -6 route add fd37:b4dc:4b1e::/64 table wi dev $IFACE
        post-down       /sbin/ip -6 route del fd37:b4dc:4b1e::/64 table wi dev $IFACE

auto wiBR
iface wiBR inet static
        bridge-ports none
        address 10.56.0.5
        netmask 255.255.192.0
	# ip rules to add all traffic entering the bridge to the appropriate rt_table
        post-up         /sbin/ip rule add iif $IFACE table wi
        pre-down        /sbin/ip rule del iif $IFACE table wi
        # local reachable subnet
        post-up         /sbin/ip route add 10.56.0.0/18 dev $IFACE table wi
        post-down       /sbin/ip route del 10.56.0.0/18 dev $IFACE table wi
        # insert ic-vpn light route for mz network into rt_table mz
        post-up         /sbin/ip route add 10.56.0.0/18 table mz dev $IFACE
        post-down       /sbin/ip route del 10.56.0.0/18 table mz dev $IFACE

iface wiBR inet6 static
        address fd56:b4dc:4b1e::a38:5
        netmask 64
	# ip rules to add all traffic entering the bridge to the appropriate rt_table
	post-up         /sbin/ip -6 rule add iif $IFACE table wi
	pre-down        /sbin/ip -6 rule del iif $IFACE table wi
        # link-local subnet
        post-up         /sbin/ip -6 route add fe80::/64 dev $IFACE table wi proto kernel metric 256
        post-down       /sbin/ip -6 route del fe80::/64 dev $IFACE table wi proto kernel metric 256
	post-up		/sbin/ip -6 route add fd56:b4dc:4b1e::/64 dev $IFACE table wi proto kernel metric 256
	post-down	/sbin/ip -6 route del fd56:b4dc:4b1e::/64 dev $IFACE table wi proto kernel metric 256
        # insert ic-vpn light route for mz network into rt_table mz
        post-up         /sbin/ip -6 route add fd56:b4dc:4b1e::/64 table mz dev $IFACE
        post-down       /sbin/ip -6 route del fd56:b4dc:4b1e::/64 table mz dev $IFACE

allow-hotplug mzVPN
iface mzVPN inet6 manual
	pre-up		/sbin/modprobe batman_adv
        pre-up		/sbin/ip link set address 02:00:0a:25:00:05 dev $IFACE 
        post-up		/usr/sbin/batctl -m mzBAT if add $IFACE 
        post-up		/sbin/ip link set dev mzBAT up

allow-hotplug wiVPN
iface wiVPN inet6 manual
	pre-up		/sbin/modprobe batman_adv
        pre-up		/sbin/ip link set address 02:00:0a:38:00:05 dev $IFACE
        post-up		/usr/sbin/batctl -m wiBAT if add $IFACE
        post-up		/sbin/ip link set dev wiAT up



allow-hotplug mzBAT
iface mzBAT inet6 manual
	pre-up		/sbin/modprobe batman-adv
	post-up		/sbin/brctl addif mzBR $IFACE
	post-up 	/usr/sbin/batctl -m $IFACE it 10000
	post-up 	/usr/sbin/batctl -m $IFACE vm server
	post-up 	/usr/sbin/batctl -m $IFACE gw server 96mbit/96mbit
#
	pre-down	/sbin/brctl delif mzBR $IFACE || true


allow-hotplug wiBAT
iface wiBAT inet6 manual
        pre-up          /sbin/modprobe batman-adv
        post-up         /sbin/brctl addif wiBR $IFACE
	post-up 	/usr/sbin/batctl -m $IFACE it 10000
	post-up 	/usr/sbin/batctl -m $IFACE vm server
	post-up 	/usr/sbin/batctl -m $IFACE gw server 96mbit/96mbit
#
        pre-down        /sbin/brctl delif wiBR $IFACE || true

