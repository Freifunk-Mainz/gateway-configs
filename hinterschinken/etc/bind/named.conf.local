// Public Zones for Freifunk

zone "freifunk-mainz.de." {
        type master;
        file "/etc/bind/freifunk-mainz/freifunk-mainz.de.master.db";
        allow-transfer { ns-public-mathias; ns-public-tobias; ns-slaves-mz; ns-slaves-wi; };
        also-notify { fd37:b4dc:4b1e::a25:7; fd37:b4dc:4b1e::a25:17; };
};

zone "freifunk-wiesbaden.de." {
	type master;
	file "/etc/bind/freifunk-wiesbaden/freifunk-wiesbaden.de.master.db";
	allow-transfer { ns-public-mathias; ns-public-tobias; ns-slaves-mz; ns-slaves-wi; };
	also-notify { fd56:b4dc:4b1e::a38:7; fd56:b4dc:4b1e::a38:17; };
};

// Intern Zones for Freifunk

zone "ffmz.org." {
	type master;
	file "/etc/bind/ffmz/ffmz.org.master.db";
};

zone "user.ffmz.org." {
