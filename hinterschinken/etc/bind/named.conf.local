// ACLs

acl "ns-public-mathias" {
	46.4.168.77; // ns1.treck.de
	109.75.177.23; // ns2.treck.de
	78.46.87.3; // ns3.treck.de
};

acl "ns-public-tobias" {
	84.200.43.97/32;
	78.47.49.189/32;
	2001:1608:19:f1::4c1d:c0de/128;
	2a01:4f8:d15:1680::bee2:c0de/128;
};

acl "ns-slaves-mz" {
	10.37.0.7/32;
	10.37.0.23/32;
	fd37:b4dc:4b1e::a25:7/128;
	fd37:b4dc:4b1e::a25:17/128;
